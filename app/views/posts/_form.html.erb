    <div id="error_explanation">
       <h2><%= pluralize(flash[:user_error].count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% flash[:user_error].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @post do |p| %>

<%= p.label :title %>
<%= p.text_field :title %><br> <br>

<%= p.label :content %><br>
<%= p.text_area :content, :cols => 80, :rows => 20 %><br><br>
<%= p.collection_select :blogger_id, @bloggers, :id, :name %><br><br>
<%= p.collection_select :destination_id, @destinations, :id,:name %><br><br><br>

<%= p.submit "Save Post" %>

<% end %>